<%- include('../includes/header') %>
    <header class = "main-header">
        <a href = "/" class = "home-link">Home</a>
    </header>
    <div class = "container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h1>Inicio</h1>
                <form action = "/login" method = "post" class = "mx-auto p-3 bg-light">
                    <div class = "form-group">
                        <label for= "username">Nombre de usuario</label>
                        <input type = "text" name = "username" class = "form-control" id = "username" placeholder = "Nombre de Usuario" required>
                        <% if (Object.keys(errs).includes('inexistent_user')) { %>
                            <div class = "alert alert-danger">
                                <%= errs.inexistent_user %>
                            </div>
                        <% } %>
                    </div>
                    <div class = "form-group">
                        <label for= "password">Contrase√±a</label>
                        <input type = "password" name = "password" class = "form-control" id = "password" placeholder = "Nombre de Usuario" required>
                        <% if (Object.keys(errs).includes('wrong_password')) { %>
                            <div class = "alert alert-danger">
                                <%= errs.wrong_password %>
                            </div>
                        <% } %>
                    </div>
                    <button type = "submit" class = "btn btn-success">Login</button>
                </form>
            </div>
        </div>
    </div>
<%- include('../includes/footer') %>